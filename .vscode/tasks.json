{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "pnpm install",
            "problemMatcher": []
        },
        {
            "label": "Build Plugin",
            "type": "shell",
            "command": "pnpm run build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "Watch Mode",
            "type": "shell",
            "command": "pnpm run watch",
            "isBackground": true,
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "Deploy to Steam Deck",
            "type": "shell",
            "command": "rsync -avz --delete --exclude 'node_modules' --exclude '.git' --exclude 'out' ./ deck@${DECK_IP:-192.168.1.100}:/home/deck/homebrew/plugins/alarme-decky-plugin/",
            "problemMatcher": [],
            "dependsOn": "Build Plugin"
        },
        {
            "label": "Restart Decky Loader",
            "type": "shell",
            "command": "ssh deck@${DECK_IP:-192.168.1.100} 'sudo systemctl restart plugin_loader'",
            "problemMatcher": []
        },
        {
            "label": "Build and Deploy",
            "dependsOrder": "sequence",
            "dependsOn": [
                "Build Plugin",
                "Deploy to Steam Deck"
            ],
            "problemMatcher": []
        }
    ]
}